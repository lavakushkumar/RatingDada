<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#edebec" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="#c2292e" >

        <ImageView
            android:id="@+id/Goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/left_arrow"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Goback"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">


        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Movie Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/mReleseddate"
            android:text="Relesed Date"
            />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginBottom="45dp"
        android:id="@+id/scrollview">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/llTotal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/LinearLayoutAdd3"
                    android:layout_below="@+id/tvPageTitle"
                    android:clickable="true"
                    android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/mMovieIcon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/rd_splash_bw"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mMovieIcon"
                            android:layout_marginTop="5dp"
                            android:weightSum="2"
                            android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:background="@drawable/shadow"
                                        android:layout_gravity="left"
                                        android:layout_weight="1"
                                        android:layout_margin="8dp">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="5dp"
                                                android:textColor="#000000"
                                                android:text="User Ratings"
                                                />
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                >
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="5dp"
                                                    android:id="@+id/mUserrating"
                                                    android:textStyle="bold"
                                                    android:text="3.26/5"
                                                    />
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="30dp"
                                                    android:layout_marginRight="2dp"
                                                    android:layout_marginTop="5dp"
                                                    android:id="@+id/mTotal_users"
                                                    android:text="29 Votings"
                                                    />
                                            </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:background="@drawable/shadow"
                                        android:layout_weight="1"
                                        android:layout_gravity="right"
                                        android:layout_margin="8dp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:textColor="#000000"
                                            android:text="Crictics Ratings"
                                            />
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            >
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="5dp"
                                                android:textStyle="bold"
                                                android:id="@+id/mCritics"
                                                android:text="1.25/5"
                                                />
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="30dp"
                                                android:layout_marginRight="2dp"
                                                android:layout_marginTop="5dp"
                                                android:id="@+id/mTotal_sites"
                                                android:text="12 Votings"
                                                />
                                        </LinearLayout>

                                    </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutAdd3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:weightSum="3">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="#c2292e"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:id="@+id/tvTitle"
                            android:textColor="#3f3f3f"

                            android:layout_weight="1"
                            android:text="ALL CRITICS REVIEWS"
                            />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="2dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#c2292e"/>


                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/castandcrew"
                            android:layout_marginBottom="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shadow"
                            android:visibility="gone"
                            >


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:text="Banner"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:id="@+id/mBanner"
                                    android:text="Banner"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:text="Stars"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:id="@+id/mStars"
                                    android:text="Stars"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:layout_margin="10dp"
                                    android:text="Music"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:id="@+id/mMusic"
                                    android:text="Music"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:layout_margin="10dp"
                                    android:text="Director"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:id="@+id/mDirector"
                                    android:text="Director"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:layout_margin="10dp"
                                    android:text="Producer"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:id="@+id/mProducer"
                                    android:text="Producer"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:text="Cinimatographer"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:id="@+id/mCinimatographer"
                                    android:text="Cinimatographer"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                        android:id="@+id/listSites"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/shadow"
                        android:layout_marginBottom="45dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        >
                        </LinearLayout>

                        <!--<WebView-->
                            <!--android:id="@+id/listvideos"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:orientation="vertical"-->
                            <!--android:background="@drawable/shadow"-->
                            <!--android:layout_marginBottom="45dp"-->
                            <!--android:layout_marginTop="10dp"-->
                            <!--android:layout_marginRight="10dp"-->
                            <!--android:layout_marginLeft="10dp"-->
                            <!--android:visibility="gone"-->
                            <!--/>-->


                    <!--<GridView-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="fill_parent"-->
                        <!--android:id="@+id/show_youtube"-->
                        <!--android:background="@drawable/shadow"-->
                        <!--android:fillViewport="true"-->
                        <!--android:layout_marginBottom="45dp"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:scrollbars="horizontal"-->
                        <!--android:numColumns="2">-->
                    <!--</GridView>-->


                    <LinearLayout
                        android:id="@+id/show_youtube"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/shadow"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginBottom="45dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        >
                    </LinearLayout>





            </LinearLayout>
            </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/grdbutton_inverted"
            android:id="@+id/oncricticreview"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/critic_reviews"
                />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text="CRICTIC REVIEW"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/grdbutton"
            android:layout_weight="1"
            android:id="@+id/Ratethis"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/rate_now"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:text="RATE NOW"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/grdbutton"
            android:orientation="vertical"
            android:id="@+id/oncastandcrew"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/cast"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:text="CAST &amp; CREW"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/grdbutton"
            android:orientation="vertical"
            android:id="@+id/onvideos"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/videos"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="VIDEOS"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>